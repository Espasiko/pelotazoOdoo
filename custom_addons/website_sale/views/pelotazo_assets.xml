<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pelotazo_assets" inherit_id="website.assets_frontend" name="Pelotazo Theme Assets">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/website_sale/static/src/css/pelotazo_theme.css"/>
            <script type="text/javascript" src="/website_sale/static/src/js/pelotazo_theme_injector.js"></script>
        </xpath>
    </template>
    
    <template id="pelotazo_shop_layout" inherit_id="website_sale.products" active="True">
        <xpath expr="//div[hasclass('o_wsale_products_main_row')]" position="before">
            <div class="pelotazo-banner" style="background-color: #e30613; color: white; text-align: center; padding: 10px; font-weight: bold;">
                Bienvenido a la tienda online de El Pelotazo - ¡Los mejores electrodomésticos al mejor precio!
            </div>
        </xpath>
    </template>
</odoo>
